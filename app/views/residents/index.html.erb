<p id="notice"><%= notice %></p>

<h1>Residents</h1>

<table>
  <thead>
    <tr>
      <th>Resident one</th>
      <th>Resident two</th>
      <th>Lot number</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.resident_one %></td>
        <td><%= resident.resident_two %></td>
        <td><%= resident.lot_number %></td>
        <td><%= resident.address %></td>
        <td><%= resident.city %></td>
        <td><%= resident.state %></td>
        <td><%= resident.zip_code %></td>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

