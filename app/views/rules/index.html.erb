<p id="notice"><%= notice %></p>

<h1>Rules</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Body</th>
      <th>Violation summary</th>
      <th>Violation recommondation</th>
      <th>Thirty day summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.number %></td>
        <td><%= rule.name %></td>
        <td><%= rule.body %></td>
        <td><%= rule.violation_summary %></td>
        <td><%= rule.violation_recommondation %></td>
        <td><%= rule.thirty_day_summary %></td>
        <td><%= link_to 'Show', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

